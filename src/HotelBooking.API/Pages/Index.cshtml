<div class="max-w-7xl mx-auto px-4 py-8" x-data="hotelModal()">
    <h1 class="text-3xl font-semibold text-gray-100 text-center mb-8">
        Available Hotels
    </h1>

    <!-- Hotel list -->
    @if (Model.Hotels != null && Model.Hotels.Any())
    {
        var colors = new[] { 
            "bg-gradient-to-r from-blue-600 to-indigo-500",
            "bg-gradient-to-r from-purple-600 to-pink-500",
            "bg-gradient-to-r from-orange-500 to-amber-400",
            "bg-gradient-to-r from-sky-600 to-cyan-500" };
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var hotel in Model.Hotels)
            {
                var colorClass = colors[Random.Shared.Next(colors.Length)];

                <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
                    <!-- Image / placeholder block -->
                    <div class="relative h-24 md:h-32 @colorClass flex items-end justify-start p-4">
                        <h2 class="text-xl font-semibold text-white bg-black/40 px-3 py-1 rounded-lg">
                            @hotel.Name
                        </h2>
                    </div>

                    <!-- Address and Description -->
                    <div class="p-4">
                        <p class="text-gray-400 text-sm mb-2">@hotel.Address</p>
                        <p class="text-gray-300 text-sm line-clamp-3">@hotel.Description</p>
                        <div class="mt-4 text-right">
                            <button x-on:click.stop="openHotel($el.dataset.id)" data-id="@hotel.Id"
                                    class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-2 rounded-lg transition-all duration-200">
                                View Rooms
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-400 text-center text-lg mt-16">No available hotels 😔</p>
    }

    <!-- Modal -->

    <div x-show="selectedHotel" x-ref="hotelModal" x-transition class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
        <div x-on:click.away="closeHotel()" class="bg-gray-900 rounded-lg p-6 w-11/12 max-w-2xl shadow-lg overflow-auto max-h-[90vh]">
            <h2 class="text-2xl font-bold text-white mb-2" x-text="selectedHotel?.name"></h2>

            <template x-for="room in selectedHotel?.rooms" :key="room.id">
                <div class="bg-gray-800 p-3 rounded mb-2 flex justify-between items-center">
                    <div>
                        <p class="text-gray-200" x-text="room.description"></p>
                        <p class="text-gray-400 text-sm">
                            Capacity: <span x-text="room.capacity"></span> |
                            Price per night: $<span x-text="room.pricePerNight"></span>
                        </p>
                    </div>

                    <!-- Book button -->
                    <form method="get" action="/Bookings/Create" class="ml-4">
                        <input type="hidden" name="RoomId" :value="room.id" />
                        <input type="hidden" name="CheckIn" value="@Model.CheckIn.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="CheckOut" value="@Model.CheckOut.ToString("yyyy-MM-dd")" />
                        <button type="submit"
                                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                            Book
                        </button>
                    </form>
                </div>
            </template>


            <div class="text-right mt-4">
                <button x-on:click="closeHotel()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">
                    Close
                </button>
            </div>
        </div>
    </div>

</div>

<script>
    function hotelModal() {
        return {
            hotels: @Html.Raw(Json.Serialize(Model.Hotels)),
            selectedHotel: null,
            openHotel(id) {
                id = Number(id); // convert string to number
                const hotel = this.hotels.find(h => h.id === id);
                if (hotel) {
                    hotel.RoomsDto = hotel.RoomsDto || [];
                    this.selectedHotel = hotel;
                    this.$refs.hotelModal.classList.remove('hidden');
                } else {
                    console.warn('Hotel not found', id);
                }
            },
            closeHotel() {
                    this.selectedHotel = null;
            }
        }
    }
</script>

