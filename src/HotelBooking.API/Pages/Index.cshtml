@model HotelBooking.API.Pages.IndexModel
@{
    ViewData["Title"] = "Hotels";
}

<div class="max-w-4xl mx-auto px-4">

    <!-- MOBILE COLLAPSIBLE WRAPPER -->
    <div class="md:hidden">
        <input type="checkbox" id="toggleFindHotel" class="hidden" />
        <label for="toggleFindHotel" class="text-gray-100 font-semibold cursor-pointer flex justify-between items-center mb-2">
            Find the Perfect Hotel
            <span class="text-gray-400">▼</span>
        </label>
        <p class="text-gray-300 text-sm mb-4">Click above to expand the search form.</p>

        <div class="hidden" id="mobileForm">
            <form method="get" asp-page="/Hotels/Index"
                  class="grid gap-4 grid-cols-2">
                <!-- check-in / check-out -->
                <div class="grid grid-cols-2 gap-4 col-span-2">
                    <div>
                        <label class="block text-gray-300 font-medium mb-1">Check-in</label>
                        <input type="date" asp-for="CheckIn"
                               class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400" />
                    </div>
                    <div>
                        <label class="block text-gray-300 font-medium mb-1">Check-out</label>
                        <input type="date" asp-for="CheckOut"
                               class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400" />
                    </div>
                </div>
                <!-- city + search button -->
                <div class="grid grid-cols-[1fr_auto] gap-4 col-span-2 mt-2">
                    <input type="text" asp-for="City"
                           class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400"
                           placeholder="Enter city..." />
                    <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- DESKTOP FORM -->
    <div class="hidden md:block bg-gray-800 shadow-xl rounded-2xl sm:px-6 sm:py-4 w-full">
        <form method="get" asp-page="/Hotels/Index"
              class="flex items-end justify-between gap-4">

            <div class="flex gap-4 flex-1">
                <div class="flex-1">
                    <label class="block text-gray-300 font-medium mb-1">Check-in</label>
                    <input type="date" asp-for="CheckIn"
                           class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400" />
                </div>
                <div class="flex-1">
                    <label class="block text-gray-300 font-medium mb-1">Check-out</label>
                    <input type="date" asp-for="CheckOut"
                           class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400" />
                </div>
                <div class="flex-1">
                    <label class="block text-gray-300 font-medium mb-1">City</label>
                    <input type="text" asp-for="City"
                           class="w-full bg-gray-700 border border-gray-600 rounded-lg p-2 text-gray-100 placeholder-gray-400"
                           placeholder="Enter city..." />
                </div>
            </div>

            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg flex items-center gap-2 h-[42px]">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                     stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 18a7.5 7.5 0 006.15-3.35z" />
                </svg>
                Search
            </button>
        </form>
    </div>

</div>

<style>
    /* mobile checkbox toggle */
    #toggleFindHotel:checked ~ #mobileForm {
        display: block;
    }
</style>



